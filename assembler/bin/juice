#!/usr/bin/env coffee
#
# Convert object file to executable
#

CodeObject = require '../src/code-object'
fs = require 'fs'

if process.argv.length isnt 4
  console.error 'Usage: juice <file1.json> <output.bin>'
  process.exit 1

fs.readFile process.argv[2], (err, data1) ->
  if err?
    console.error err
    process.exit 1
  object1 = new CodeObject JSON.parse data1
  data = new Buffer object1.info.code.length * 4
  for num, i in object1.info.code
    data.writeUInt32LE num >>> 0, i * 4
  fs.writeFile process.argv[3], data, (err) ->
    if err?
      console.error err
      process.exit 1
    process.exit 0
